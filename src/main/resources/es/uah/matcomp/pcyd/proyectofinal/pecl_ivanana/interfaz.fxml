<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Rectangle?>

<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="600.0" prefWidth="900.0" fx:id="root">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <!-- Etiquetas para zonas -->
    <Label layoutX="50.0" layoutY="20.0" text="Túnel A" />
    <Label layoutX="250.0" layoutY="20.0" text="Zona 1" />
    <Label layoutX="450.0" layoutY="20.0" text="Zona 2" />
    <Label layoutX="650.0" layoutY="20.0" text="Zona 3" />
    <Label layoutX="250.0" layoutY="320.0" text="Refugio" />
    <Label layoutX="50.0" layoutY="320.0" text="Túnel B" />
    <Label layoutX="650.0" layoutY="320.0" text="Túnel C" />

    <!-- Rectángulos representando zonas -->
    <Rectangle layoutX="250.0" layoutY="50.0" width="100.0" height="150.0" fx:id="zona1" styleClass="rectangle"/>
    <Rectangle layoutX="450.0" layoutY="50.0" width="100.0" height="150.0" fx:id="zona2" styleClass="rectangle"/>
    <Rectangle layoutX="650.0" layoutY="50.0" width="100.0" height="150.0" fx:id="zona3" styleClass="rectangle"/>
    <Rectangle layoutX="250.0" layoutY="350.0" width="100.0" height="150.0" fx:id="refugio" styleClass="rectangle"/>

    <!-- Túneles -->
    <Rectangle layoutX="50.0" layoutY="50.0" width="150.0" height="150.0" fx:id="tunelA" styleClass="rectangle"/>
    <Rectangle layoutX="50.0" layoutY="350.0" width="150.0" height="150.0" fx:id="tunelB" styleClass="rectangle"/>
    <Rectangle layoutX="650.0" layoutY="350.0" width="100.0" height="150.0" fx:id="tunelC" styleClass="rectangle"/>

    <!-- Campos de texto para humanos y zombis -->
    <TextField layoutX="250.0" layoutY="210.0" fx:id="zona1Texto" editable="false" styleClass="text-field"/>
    <TextField layoutX="450.0" layoutY="210.0" fx:id="zona2Texto" editable="false" styleClass="text-field"/>
    <TextField layoutX="650.0" layoutY="210.0" fx:id="zona3Texto" editable="false" styleClass="text-field"/>
    <TextField layoutX="250.0" layoutY="510.0" fx:id="refugioTexto" editable="false" styleClass="text-field"/>

    <!-- Botón de Pausar/Reanudar -->
    <Button layoutX="800.0" layoutY="550.0" fx:id="btnPausar" text="Pausar" onAction="#togglePausa" />

    <!-- Botón de Detener ejecución -->
    <Button layoutX="650.0" layoutY="550.0" fx:id="btnDetener" text="Detener ejecución" onAction="#detenerEjecucion"/>
</AnchorPane>
